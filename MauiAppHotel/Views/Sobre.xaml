<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False">

    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Yellow" Offset="0.1" />
            <GradientStop Color="Red" Offset="0.8" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20" Spacing="25"
                         VerticalOptions="Center">

        <Label Text="Sobre o Aplicativo"
               FontFamily="Kalam"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black" />

        <Label Text="Este aplicativo foi desenvolvido em 2/11/2025 por Igor Pedecine Leal em colaboração com a istituição de ensino CPS."
               FontFamily="Kalam"
               FontSize="18"
               TextColor="Black"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <!-- Botão para voltar à página Contratacao -->
        <Button Text="Voltar-->"
                FontFamily="Kalam"
                BackgroundColor="Black"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                WidthRequest="100"
                HorizontalOptions="Start"
                Clicked="OnVoltarClicked" />

    </VerticalStackLayout>
</ContentPage>